    <com.strod.yssl.view.viewpagerindicator.PagerSlidingTabStrip
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        app:pstsShouldExpand="true"
        app:pstsIndicatorColor = "@color/title_bg_color"
        app:pstsIndicatorHeight="1dp"
        app:pstsDividerColor="#00000000"
        app:pstsUnderlineColor = "#00000000"
        app:pstsUnderlineHeight="0dp"
        app:pstsTabPaddingLeftRight="22dip"
        app:pstsSelectedTabTextSize="12sp"
        app:pstsSelectedTabTextColor="@color/title_bg_color"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

